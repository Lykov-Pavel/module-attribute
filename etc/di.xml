<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Mygento\Attribute\Model\Config\Reader" type="Magento\Framework\Config\Reader\Filesystem">
        <arguments>
            <argument name="converter" xsi:type="object">Mygento\Attribute\Model\Config\Converter</argument>
            <argument name="schemaLocator" xsi:type="object">Mygento\Attribute\Model\Config\SchemaLocator</argument>
            <argument name="fileName" xsi:type="string">attribute_schema.xml</argument>
        </arguments>
    </virtualType>

    <virtualType name="Mygento\Attribute\Model\Config\SchemaConfig" type="Magento\Framework\Config\Data">
        <arguments>
            <argument name="reader" xsi:type="object">Mygento\Attribute\Model\Config\Reader</argument>
            <argument name="cacheId" xsi:type="string">attribute_schema_config</argument>
        </arguments>
    </virtualType>

    <type name="Mygento\Attribute\Model\SchemaSetup">
        <arguments>
            <argument name="data" xsi:type="object">Mygento\Attribute\Model\Config\SchemaConfig</argument>
        </arguments>
    </type>

</config>